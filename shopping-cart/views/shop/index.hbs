<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{#each this}}{{ this.imagePath }}{{/each}}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{#each this}}{{ this.title }}{{/each}}</h3>
                        <p class="description">{{#each this}}{{ this.description }}{{/each}}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{#each this}}{{ this.price }}{{/each}}</div>
                            <a href="/add-to-cart/{{#each this}}{{this._id}}{{/each}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}